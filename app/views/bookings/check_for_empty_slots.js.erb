<% if @allowed_timeslots[:first_half] %>
	<% if @time && @time >= 12 %>
		alert("<%= @time %>")
		$('#booking_first_half').attr("disabled", "disabled");
	<% else %>
		if($('#booking_first_half').is('[disabled]')) {
			$('#booking_first_half').removeAttr("disabled");
			$('#booking_first_half').removeClass("disabled");
		}
	<% end %>
<% else %>
	$('#booking_first_half').attr("disabled", "disabled");
<% end %>

