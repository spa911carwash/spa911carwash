<div class="fh5co-contact animate-box">
	<div class="container">
		<div class="row">
			<div class="col-md-3">
				<h3>Contact Info.</h3>
				<ul class="contact-info">
					<li><i class="icon-map"></i>198 West 21th Street, Suite 721 New York NY 10016</li>
					<li><i class="icon-phone"></i>+ 1235 2355 98</li>
					<li><i class="icon-envelope"></i><a href="#">info@yoursite.com</a></li>
					<li><i class="icon-globe"></i><a href="#">www.yoursite.com</a></li>
				</ul>
			</div>
			<%= form_tag contact_us_spa_emails_path do %>
				<div class="col-md-8 col-md-push-1 col-sm-12 col-sm-push-0 col-xs-12 col-xs-push-0">
					<div class="row">
						<div class="col-md-6">
							<div class="form-group">
								<%= text_field_tag :name, nil, class: 'form-control', placeholder: 'Your Name here' %>
							</div>
						</div>
						<div class="col-md-6">
							<div class="form-group">
								<%= text_field_tag :email, nil, class: 'form-control', placeholder: 'Your Email here' %>
								
							</div>
						</div>
						<div class="col-md-12">
							<div class="form-group">
								<%= text_area_tag :message,nil,class: "form-control",cols: "30", rows: "7", placeholder: "Message"   %>
							</div>
						</div>
						<div class="col-md-12">
							<div class="form-group">
								<%= submit_tag "Send Message", class: "btn btn-primary" %>
							</div>
						</div>
					</div>
				</div>
			<% end %>
		</div>
	</div>	
</div>

